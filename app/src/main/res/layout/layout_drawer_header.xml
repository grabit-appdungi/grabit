<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_img_drawer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_host_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt_drawer_mail"/>
    <TextView
        android:id="@+id/txt_drawer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stellar"
        app:layout_constraintLeft_toRightOf="@+id/circle_img_drawer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_drawer_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stellarhalo@naver.com"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/circle_img_drawer"
        app:layout_constraintTop_toBottomOf="@id/txt_drawer_id"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txt_drawer_mail"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>