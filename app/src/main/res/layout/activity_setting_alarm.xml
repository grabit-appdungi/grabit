<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_notification"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="알람 설정"
            android:textSize="25dp"
            app:layout_constraintLeft_toRightOf="@id/img_notification"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"/>
        <View
            android:id="@+id/view_setting_black"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/txt_notification"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt_setting_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="소리"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/view_setting_black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="25dp"/>
        <ImageView
            android:id="@+id/img_sound_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintLeft_toRightOf="@+id/txt_setting_sound"
            app:layout_constraintBottom_toTopOf="@+id/view_setting_gray_f"
            android:layout_margin="16dp"/>
        <View
            android:id="@+id/view_setting_gray_f"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/sky_blue"
            app:layout_constraintTop_toBottomOf="@id/txt_setting_sound"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <TextView
            android:id="@+id/txt_setting_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="진동"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/view_setting_gray_f"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="25dp"/>
        <ImageView
            android:id="@+id/img_vibrate_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintLeft_toRightOf="@+id/txt_setting_sound"
            app:layout_constraintBottom_toTopOf="@+id/view_setting_gray_s"
            android:layout_margin="16dp"/>
        <View
            android:id="@+id/view_setting_gray_s"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/sky_blue"
            app:layout_constraintTop_toBottomOf="@id/txt_setting_vibration"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <TextView
            android:id="@+id/txt_setting_silent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무음"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/view_setting_gray_s"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="25dp"/>
        <ImageView
            android:id="@+id/img_silent_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintLeft_toRightOf="@+id/txt_setting_sound"
            app:layout_constraintBottom_toTopOf="@+id/view_setting_gray_t"
            android:layout_margin="16dp"/>
        <View
            android:id="@+id/view_setting_gray_t"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/sky_blue"
            app:layout_constraintTop_toBottomOf="@id/txt_setting_silent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>
        <TextView
            android:id="@+id/txt_setting_disturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방해금지"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/view_setting_gray_t"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="25dp"/>
        <Switch
            android:id="@+id/swc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintLeft_toRightOf="@+id/txt_setting_disturb"
            app:layout_constraintTop_toBottomOf="@+id/view_setting_gray_t"
            app:layout_constraintBottom_toTopOf="@id/txts_disturb_setting"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:switchMinWidth="30dp"/>
        <LinearLayout
            android:id="@+id/txts_disturb_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_setting_disturb"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/txt_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼시간을 선택해주세요."
                    android:textSize="13dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/txt_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼시간을 선택해주세요."
                    android:textSize="13dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <android.widget.Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txts_disturb_setting"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:text="확인"
            android:textColor="@color/white"
            android:background="@drawable/button_round"
            android:minHeight="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>