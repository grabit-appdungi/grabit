<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/txt_cardName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:text="habit_name"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_thisMonth"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:text="이번달에"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_toLeftOf="@+id/txt_cPercentage"
                android:layout_below="@+id/txt_cardName"

                />
            <TextView
                android:id="@+id/txt_cPercentage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="2%"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_cardName"

                />
            <TextView
                android:id="@+id/txt_done"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:text="해냈어요!"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_cPercentage"
                android:layout_below="@+id/txt_cardName"
                />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>