<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="0dp">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginBottom="321dp"
        android:entries="@array/habit_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calendarView"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintBottom_toTopOf="txt_habit_rate"/>

    <ScrollView
        android:layout_width="356dp"
        android:layout_height="695dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_habit_rate"
                android:layout_width="382dp"
                android:layout_height="33dp"
                android:layout_marginStart="25dp"
                android:text="습관 수행률"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_progress_percent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:text="%"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_did"
                app:layout_constraintEnd_toEndOf="@+id/txt_did"
                app:layout_constraintHorizontal_bias="0.598"
                app:layout_constraintStart_toStartOf="@+id/txt_did"
                app:layout_constraintTop_toTopOf="@+id/txt_did" />

            <TextView
                android:id="@+id/txt_did"
                android:layout_width="358dp"
                android:layout_height="38dp"
                android:text="이번 달에                         해냈어요!"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_rate" />

            <TextView
                android:id="@+id/txt_habit_max_until_today"
                android:layout_width="358dp"
                android:layout_height="38dp"
                android:text="이번 달에 최대               일 연속 해냈어요!"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_max" />

            <TextView
                android:id="@+id/txt_habit_max"
                android:layout_width="382dp"
                android:layout_height="33dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="최고 기록"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_did" />

            <TextView
                android:id="@+id/txt_habit_until_today"
                android:layout_width="382dp"
                android:layout_height="33dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="오늘까지"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_max_until_today" />

            <TextView
                android:id="@+id/txt_habit_continue"
                android:layout_width="358dp"
                android:layout_height="38dp"
                android:text="연속                       일째 해냈어요!"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_until_today" />

            <ProgressBar
                android:id="@+id/pgbar_lastmonth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="281dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.986"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_compare" />

            <TextView
                android:id="@+id/txt_habit_compare"
                android:layout_width="354dp"
                android:layout_height="28dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="25dp"
                android:text="월별 비교"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.043"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_continue" />

            <ProgressBar
                android:id="@+id/pgbar_thismonth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="282dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pgbar_lastmonth" />

            <TextView
                android:id="@+id/txt_lastmonth"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_marginTop="12dp"
                android:text="지난 달"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/pgbar_lastmonth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_habit_compare" />

            <TextView
                android:id="@+id/txt_thismonth"
                android:layout_width="74dp"
                android:layout_height="23dp"
                android:layout_marginTop="4dp"
                android:text="이번 달"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_lastmonth" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>