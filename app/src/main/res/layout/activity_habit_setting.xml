<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-87dp">

        <TextView
            android:id="@+id/txt_habit"
            android:layout_width="69dp"
            android:layout_height="42dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:text="습관"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etxt_habit_name" />

        <EditText
            android:id="@+id/etxt_habit_name"
            android:layout_width="316dp"
            android:layout_height="62dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="52dp"
            android:ems="10"
            android:hint="습관명을 입력하세요."
            android:textColorHint="#B1B1B3"
            app:layout_constraintTop_toBottomOf="@+id/txt_habit"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/txt_frequency"
            android:layout_width="63dp"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="주기"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/etxt_habit_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lnr_frequency"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:id="@+id/lnr_frequency"
            android:layout_width="395dp"
            android:layout_height="63dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/txt_frequency"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_alarm">

            <ToggleButton
                android:id="@+id/btn_toggle_mon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="MON"
                android:textOn="MON"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <ToggleButton
                android:id="@+id/btn_toggle_tue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="TUE"
                android:textOn="TUE"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <ToggleButton
                android:id="@+id/btn_toggle_wed"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="WED"
                android:textOn="WED"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <ToggleButton
                android:id="@+id/btn_toggle_thu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="THU"
                android:textOn="THU"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <ToggleButton
                android:id="@+id/btn_toggle_fri"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="FRI"
                android:textOn="FRI"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <ToggleButton
                android:id="@+id/btn_toggle_sat"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="SAT"
                android:textOn="SAT"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

            <ToggleButton
                android:id="@+id/btn_toggle_sun"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_toggle_button"
                android:checked="true"
                android:textColor="@drawable/color_toggle_button"
                android:textOff="SUN"
                android:textOn="SUN"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="149dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_alarm"
            android:layout_width="126dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="알림 시간 설정"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/lnr_frequency"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"/>

        <Switch
            android:id="@+id/swc_alarm"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="4dp"
            android:text="알림"
            app:layout_constraintLeft_toRightOf="@id/txt_alarm"
            app:layout_constraintTop_toBottomOf="@id/lnr_frequency"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:id="@+id/lnr_alarm"
            android:layout_width="400dp"
            android:layout_height="65dp"
            android:layout_marginBottom="328dp"
            app:layout_constraintTop_toBottomOf="@id/txt_alarm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="133dp"
                android:layout_height="66dp"
                android:layout_marginBottom="312dp"
                android:entries="@array/alarm_type"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toStartOf="@+id/tp_habit_notification"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent" />

            <TimePicker
                android:id="@+id/tp_habit_alarm"
                android:layout_width="254dp"
                android:layout_height="65dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="312dp"
                android:timePickerMode="spinner"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="391dp"
            android:layout_height="53dp"
            android:backgroundTint="#939393"
            android:text="확인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_drawer_header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
