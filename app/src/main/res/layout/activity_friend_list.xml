<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/image_friend_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_listview_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textview_freind_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        app:layout_constraintLeft_toRightOf="@+id/image_friend_profile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/textview_friends_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/textview_freind_nickname"
        app:layout_constraintLeft_toRightOf="@+id/image_friend_profile"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>